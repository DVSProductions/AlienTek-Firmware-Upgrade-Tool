<Page
	x:Class="AlienTek_Firmware_Upgrade_Tool.Pages.Page2"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:AlienTek_Firmware_Upgrade_Tool.Pages"
	xmlns:ui="clr-namespace:AlienTek_Firmware_Upgrade_Tool"
	x:ClassModifier="internal"
	mc:Ignorable="d"
	d:Background="{DynamicResource BGColor}"
	d:DesignHeight="387"
	d:DesignWidth="384"
	Foreground="White"
	Title="Page2">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="150" />
			<RowDefinition />
			<RowDefinition
				Height="100" />
		</Grid.RowDefinitions>
		<StackPanel
			VerticalAlignment="Center"
			Margin="10,0">
			<TextBlock
				Margin="10,0,10,10"
				TextAlignment="Center"
				TextWrapping="Wrap"
				Text="{x:Static ui:UI.P2Title}"
				FontSize="20" />
			<TextBlock
				TextAlignment="Left"
				TextWrapping="Wrap"
				Text="{x:Static ui:UI.ConnectionInstructionStep1}" />
			<TextBlock
				TextAlignment="Left"
				TextWrapping="Wrap"
				Text="{x:Static ui:UI.ConnectionInstructionStep2}" />
		</StackPanel>
		<Button
			Margin="10"
			Grid.Row="2"
			Content="{x:Static ui:UI.btNext}"
			Click="Button_Click" />
		<Grid
			Grid.Row="0"
			Grid.RowSpan="2"
			Height="208"
			VerticalAlignment="Bottom">
			<Grid.RenderTransform>
				<TranslateTransform
					X="0"
					Y="0" />
			</Grid.RenderTransform>
			<Grid.Triggers>
				<EventTrigger
					RoutedEvent="Loaded">
					<BeginStoryboard>
						<Storyboard
							Duration="0:0:12"
							RepeatBehavior="Forever">
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
								From="0"
								To="-100"
								BeginTime="0:0:2"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
								From="-100"
								To="0"
								BeginTime="0:0:10"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>

						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>

			</Grid.Triggers>
			<Image
				Source="pack://application:,,,/Assets/usbc.png"
				HorizontalAlignment="Right"
				Height="50"
				VerticalAlignment="Center"
				Stretch="Uniform">
				<Image.RenderTransform>
					<TranslateTransform
						X="280"
						Y="0" />
				</Image.RenderTransform>
				<Image.Triggers>
					<EventTrigger
						RoutedEvent="Loaded">
						<BeginStoryboard>
							<Storyboard
								Duration="0:0:12"
								RepeatBehavior="Forever">
								<DoubleAnimation
									Storyboard.TargetProperty="(Image.RenderTransform).(TranslateTransform.X)"
									From="280"
									To="132"
									BeginTime="0:0:3"
									Duration="0:0:1">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseInOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
								<DoubleAnimation
									Storyboard.TargetProperty="(Image.RenderTransform).(TranslateTransform.X)"
									From="132"
									To="280"
									BeginTime="0:0:10"
									Duration="0:0:1">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseInOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>

							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Image.Triggers>
			</Image>
			<Image
				Source="pack://application:,,,/Assets/T80.png"
				HorizontalAlignment="Right"
				Height="60"
				VerticalAlignment="Center"
				Stretch="UniformToFill"
				UseLayoutRounding="True"
				ScrollViewer.VerticalScrollBarVisibility="Disabled"
				IsHitTestVisible="False" />
			<Label
				HorizontalAlignment="Center"
				FontSize="19"
				Opacity="0"
				d:Opacity="1"
				VerticalAlignment="Center">
				Upgrade...
				<Label.RenderTransform>
					<TranslateTransform
						X="68"
						Y="0" />
				</Label.RenderTransform>
				<Label.Triggers>
					<EventTrigger
						RoutedEvent="Loaded">
						<BeginStoryboard>
							<Storyboard
								Duration="0:0:12"
								RepeatBehavior="Forever">
								<DoubleAnimation
									Storyboard.TargetProperty="Opacity"
									From="0"
									To="1"
									BeginTime="0:0:5"
									Duration="0:0:0.5">
									<DoubleAnimation.EasingFunction>
										<BounceEase
											EasingMode="EaseInOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
								<DoubleAnimation
									Storyboard.TargetProperty="Opacity"
									From="1"
									To="0"
									BeginTime="0:0:10.1"
									Duration="0:0:0.1">
								</DoubleAnimation>

							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>

				</Label.Triggers>
			</Label>
			<Label
				Content="↓"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="50"
				Opacity="0"
				d:Opacity="1"
				Foreground="Red">
				<Label.Triggers>
					<EventTrigger
						RoutedEvent="Loaded">
						<BeginStoryboard>
							<Storyboard
								Duration="0:0:12"
								RepeatBehavior="Forever">
								<DoubleAnimation
									Storyboard.TargetProperty="Opacity"
									From="0"
									To="1"
									BeginTime="0:0:1"
									Duration="0:0:1">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
								<DoubleAnimation
									Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
									From="-50"
									To="-21"
									BeginTime="0:0:1"
									Duration="0:0:1">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
								<DoubleAnimation
									Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
									From="-21"
									To="-35"
									BeginTime="0:0:5.5"
									Duration="0:0:0.5">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
								<DoubleAnimation
									Storyboard.TargetProperty="Opacity"
									From="1"
									To="0"
									BeginTime="0:0:5.5"
									Duration="0:0:0.5">
									<DoubleAnimation.EasingFunction>
										<CubicEase
											EasingMode="EaseOut" />
									</DoubleAnimation.EasingFunction>
								</DoubleAnimation>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Label.Triggers>
				<Label.RenderTransform>
					<TranslateTransform
						X="-43"
						Y="-50" />
				</Label.RenderTransform>
			</Label>
		</Grid>
		<Grid
			Grid.Row="1"
			Grid.RowSpan="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Bottom"
			ClipToBounds="True"
			IsHitTestVisible="False"
			Opacity="0"
			d:Opacity="1"
			Height="40">
			<Label
				IsHitTestVisible="False"
				Content="↓"
				Padding="0"
				FontSize="80"
				VerticalContentAlignment="Top"
				ScrollViewer.VerticalScrollBarVisibility="Disabled"
				Margin="0,-50,0,0" />
			<Grid.Triggers>
				<EventTrigger
					RoutedEvent="Loaded">
					<BeginStoryboard>
						<Storyboard
							Duration="0:0:12"
							RepeatBehavior="Forever">
							<DoubleAnimation
								Storyboard.TargetProperty="Opacity"
								From="0"
								To="1"
								BeginTime="0:0:6.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
								From="-90"
								To="-70"
								BeginTime="0:0:6.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
								From="-70"
								To="-90"
								BeginTime="0:0:7.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
								From="-90"
								To="-70"
								BeginTime="0:0:8.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
								From="-70"
								To="-90"
								BeginTime="0:0:9.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
								From="-90"
								To="-70"
								BeginTime="0:0:10.5"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<DoubleAnimation
								Storyboard.TargetProperty="Opacity"
								From="1"
								To="0"
								BeginTime="0:0:10"
								Duration="0:0:1">
								<DoubleAnimation.EasingFunction>
									<CubicEase
										EasingMode="EaseOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Grid.Triggers>
			<Grid.RenderTransform>
				<TranslateTransform
					X="0"
					Y="-100" />
			</Grid.RenderTransform>
		</Grid>
	</Grid>
</Page>
