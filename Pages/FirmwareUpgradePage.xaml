<Page
	x:Class="AlienTek_Firmware_Upgrade_Tool.FirmwareUpgradePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:ClassModifier="internal"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:AlienTek_Firmware_Upgrade_Tool"
	mc:Ignorable="d"
	d:DesignHeight="387"
	d:DesignWidth="384"
	Title="FirmwareUpgradePage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="50" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TextBox
			x:Name="tbOutput"
			VerticalScrollBarVisibility="Auto"
			HorizontalScrollBarVisibility="Auto"
			Padding="5"
			VerticalContentAlignment="Bottom"
			FontFamily="Consolas"
			IsReadOnly="True"
			IsReadOnlyCaretVisible="False"
			BorderBrush="Black"
			Foreground="{StaticResource IntenseBlue}"
			Background="#60000000"
			Margin="10,10,10,10.2" />

		<ProgressBar
			Margin="10,0"
			Grid.Row="1"
			BorderBrush="Black"
			Foreground="{StaticResource IntenseBlue}"
			Background="#7F000000"
			x:Name="pb"
			Maximum="1" />
		<Button
			x:Name="btFlash"
			Grid.Row="3"
			Height="50"
			VerticalAlignment="Bottom"
			Margin="10,10"
			Content="{x:Static local:UI.btFlashFirmware}"
			Click="BtFlash_Click" />

	</Grid>
</Page>
